{{#each this}}
    <li class="c-project__item">
        <article>
            <div class="c-project__art c-project__art--desktop">
                <a href="{{url}}" target="_blank">
                    <div class="c-browser-frame">
                        <span class="c-browser-frame__circle c-browser-frame__circle--close"></span>
                        <span class="c-browser-frame__circle c-browser-frame__circle--window"></span>
                        <span class="c-browser-frame__circle c-browser-frame__circle--min"></span>
                    </div>
                    <picture>
                        <img srcset="{{imagePaths.large}}" alt="{{title}}" class="c-project__art-image">
                    </picture>
                </a>
            </div>
            <div class="c-project__body">
                <h3 class="c-project__title">{{title}}</h3>
                <ul class="c-project__meta">
                    <li class="c-project__meta-item">
                        <h4 class="c-project__sub-title">Role:</h4>
                        <span class="c-project__role">{{role}}</span>
                    </li>
                    <li class="c-project__meta-item">
                        <div class="c-platforms">
                            <h4 class="c-project__sub-title">Platforms:</h4>
                            <ul class="c-platforms__list">
                                {{#each platforms ~}}
                                    <li class="c-platforms__item c-platforms__item--{{@key}} {{#if this}}is-on{{/if}}"></li>
                                {{~/each}}
                            </ul>
                        </div>
                    </li>
                    <li class="c-project__meta-item">
                        <h4 class="c-project__sub-title">URL:</h4>
                        <a href="{{url}}" target="_blank">{{urlText}}</a>
                    </li>
                </ul>

                <div class="c-project__art c-project__art--mobile">
                    <a href="{{url}}" target="_blank">
                        <picture>
                            <source srcset="{{imagePaths.medium}}" media="(min-width: 480px)">
                            <img srcset="{{imagePaths.standard}}" alt="{{title}}" class="c-project__art-image">
                        </picture>
                    </a>
                </div>

                <div class="copy"><p>{{{content}}}</p></div>
                <ul class="c-tags">
                    {{#each tags ~}}
                        <li class="c-tags__item">{{this}}</li>
                    {{~/each}}
                </ul>
            </div>
        </article>
    </li>
{{/each}}
