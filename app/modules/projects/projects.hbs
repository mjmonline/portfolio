{{#each this}}
    <li class="project-item">
        <section>
            <div class="image-desktop">
                <a href="{{url}}" target="_blank">
                    <div class="c-browser-frame">
                        <span class="c-browser-frame__circle c-browser-frame__circle--close"></span>
                        <span class="c-browser-frame__circle c-browser-frame__circle--window"></span>
                        <span class="c-browser-frame__circle c-browser-frame__circle--min"></span>
                    </div>
                    <picture>
                        <img srcset="{{imagePaths.large}}" alt="{{title}}">
                    </picture>
                </a>
            </div>
            <div class="body">
                <h3>{{title}}</h3>
                <ul class="meta">
                    <li class="role">
                        <h4 class="title">Role: <span>{{role}}</span></h4>
                    </li>
                    <li class="platforms">
                        <span class="title">Platforms: </span>
                        <ul>
                            {{#each platforms ~}}
                                <li class="{{@key}} {{#if this}}on{{/if}}"></li>
                            {{~/each}}
                        </ul>
                    </li>
                    <li class="link"><span class="title">URL: </span><a href="{{url}}" target="_blank">{{urlText}}</a>
                    </li>
                </ul>

                <div class="image-mobile">
                    <a href="{{url}}" target="_blank">
                        <picture>
                            <source srcset="{{imagePaths.medium}}" media="(min-width: 480px)">
                            <img srcset="{{imagePaths.standard}}" alt="{{title}}">
                        </picture>
                    </a>
                </div>

                <div class="copy"><p>{{{content}}}</p></div>
                <ul class="tags">
                    {{#each tags ~}}
                        <li>{{this}}</li>
                    {{~/each}}
                </ul>
            </div>
        </section>
    </li>
{{/each}}
